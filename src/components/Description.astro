---
import { type Song } from '@/lib/data'
import Title from '@/components/Title.astro'
import Information from '@/components/Information.astro'

interface Props {
  title: string
  playlistID: string | number
  artist: string
  releaseYear: string
  playListSongs: Song[]
  duration: string
  type: string
}

const { title, playlistID, artist, releaseYear, playListSongs, duration, type } = Astro.props
---

<div class='flex flex-col justify-between'>
  <Title title={title} playlistID={playlistID} type={type} />
  <Information
    playlistID={playlistID}
    artist={artist}
    releaseYear={releaseYear}
    playListSongs={playListSongs}
    duration={duration}
  />
</div>
